<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2" >

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_medium"
        android:text="Provider"
        tools:context=".MainActivity" />

    <Spinner
        android:id="@+id/fontProviderSpinner"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_medium"
        android:text="Font pack"
        tools:context=".MainActivity" />

    <Spinner
        android:id="@+id/fontPackSpinner"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_medium"
        android:text="Font Family"
        tools:context=".MainActivity" />

    <Spinner
        android:id="@+id/fontFamilySpinner"
        android:spinnerMode="dropdown" />
    
    <TextView
        android:id="@+id/regularText"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_medium"
        android:text="Regular"
        tools:context=".MainActivity" />

    <TextView
        android:id="@+id/boldText"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_medium"
        android:text="Bold"
        tools:context=".MainActivity" />
    
    <TextView
        android:id="@+id/italicText"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_medium"
        android:text="Italic"
        tools:context=".MainActivity" />
    
    <TextView
        android:id="@+id/boldItalicText"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_medium"
        android:text="Bold Italic"
        tools:context=".MainActivity" />
    
    <Button 
        android:id="@+id/install"
        android:layout_column="1"
        android:text="Install"
        android:clickable="true"
        android:onClick="onButtonClick"
        />
    
</GridLayout>